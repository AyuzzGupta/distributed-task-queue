# ─── Database ──────────────────────────────────────────────
DATABASE_URL=postgresql://taskqueue:taskqueue_pass@localhost:5432/taskqueue?schema=public
POSTGRES_PASSWORD=taskqueue_pass

# ─── Redis ─────────────────────────────────────────────────
REDIS_URL=redis://:redis_secure_pass@localhost:6379
REDIS_PASSWORD=redis_secure_pass

# ─── API ───────────────────────────────────────────────────
API_PORT=3000
API_HOST=0.0.0.0

# ─── Auth (CHANGE THESE IN PRODUCTION!) ────────────────────
JWT_SECRET=CHANGE-ME-use-a-strong-256-bit-random-secret
ADMIN_PASSWORD=admin@123!
EMPLOYEE_PASSWORD=employee@123!

# ─── CORS ──────────────────────────────────────────────────
# Set to your domain in production, e.g. https://yourdomain.com
# Use * for development (allows all origins)
CORS_ORIGIN=*

# ─── Worker ────────────────────────────────────────────────
WORKER_CONCURRENCY=10
WORKER_QUEUES=default,emails,notifications
WORKER_ID=worker-1
DEFAULT_MAX_RETRIES=5
RETRY_BASE_DELAY_MS=1000
VISIBILITY_TIMEOUT_MS=30000
POISON_PILL_THRESHOLD=3
POISON_PILL_WINDOW_MS=60000

# ─── Logging ──────────────────────────────────────────────
LOG_LEVEL=info
NODE_ENV=development
